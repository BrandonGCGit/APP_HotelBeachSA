@model APP_HotelBeachSA.Models.Cliente

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="row w-100">
        <h1 class="ff-italiana fw-bold mb-5 ms-0">Register an account</h1>
        <div class="col-md-5 mx-auto bg-grey rounded p-4">

            <form asp-action="Register">
                @if (TempData["Mensaje"] != null)
                {
                    <div class="alert alert-dark alert-dismissible fade show" role="alert">
                        <strong>@TempData["Mensaje"]</strong>
                        <button type="button" class="btn-close ff-libre-franklin" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <h5 class="text-center ff-libre-franklin fw-normal mb-4">Hi nombrecliente! We don't have it in our customer registry. </h5>
                <h5 class="text-center ff-libre-franklin fw-normal mb-4">Please enter your contact information to register</h5>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-4">
                    <div class="input-group">
                        <span class="input-group-text">
                            <img src="/img/Icons/ID-Card.png" alt="ID Icon">
                        </span>
                        <input asp-for="Cedula" class="form-control ff-libre-franklin fw-light control-label" placeholder="Identification Number" readonly />
                    </div>
                    <span asp-validation-for="Cedula" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <div class="input-group">
                        <span class="input-group-text">
                            <img src="/img/Icons/User.png" alt="Name Icon">
                        </span>
                        <input asp-for="Nombre" class="form-control ff-libre-franklin" placeholder="Full Name" readonly />
                    </div>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <div class="input-group">
                        <span class="input-group-text">
                            <img src="/img/Icons/Phone.png" alt="Phone Icon">
                        </span>
                        <input asp-for="Telefono" class="form-control ff-libre-franklin" placeholder="Telephone Number" />
                    </div>
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <div class="input-group">
                        <span class="input-group-text">
                            <img src="/img/Icons/Location.png" alt="Address Icon">
                        </span>
                        <input asp-for="Direccion" class="form-control ff-libre-franklin" placeholder="Address" />
                    </div>
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <div class="input-group">
                        <span class="input-group-text">
                            <img src="/img/Icons/Email.png" alt="Email Icon">
                        </span>
                        <input asp-for="Email" class="form-control ff-libre-franklin" placeholder="Email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <input type="submit" value="Create account" class="btn btn-primary-org ff-libre-franklin form-control fw-bold" />
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


